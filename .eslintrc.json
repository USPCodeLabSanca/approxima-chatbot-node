{
    "env": {
        "node": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "ignorePatterns": "*.js",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
          "error",
          { "args": "all", "argsIgnorePattern": "^_" }
        ],
        "semi": ["error", "always"],
        "indent": ["error", 2],
        "no-multiple-empty-lines": ["error", { "max": 3, "maxEOF": 0, "maxBOF": 1 }],
        "brace-style": ["error", "stroustrup"],
        "max-len": ["error", { "code": 100, "comments": 120 }],
        "camelcase": "off",
        "comma-dangle": "off",
        "arrow-parens": "off",
        "object-curly-spacing": ["error", "always"],
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        "operator-linebreak": ["error", "after"],
        "padded-blocks": "off",
        "no-invalid-this": 0 // TODO: estudar isso
    }
}
